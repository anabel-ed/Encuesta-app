<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fab_margin">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText7"
            android:text="Bubillas/os"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/editText4"
            android:layout_alignStart="@+id/editText4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText8"
            android:text="Bumautas/es"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/editText5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText9"
            android:text="Becerros/as"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/editText7"
            android:layout_alignStart="@+id/editText7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_cabritones"
            android:text="Cabritones"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/input_cabrio"
            android:layout_alignStart="@+id/input_cabrio" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_cabritonas"
            android:text="Cabritonas"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/input_cabra"
            android:layout_alignStart="@+id/input_cabra" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText17"
            android:text="Borregos"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/input_camero"
            android:layout_alignStart="@+id/input_camero" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/input_cabritones"
            android:layout_alignStart="@+id/input_cabritones"
            android:id="@+id/input_cabritos"
            android:text="Cabritos/as"
            android:textColor="?android:attr/colorControlNormal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignBottom="@+id/editText17"
            android:layout_alignEnd="@+id/inút_oveja"
            android:id="@+id/input_romana"
            android:text="Borregas"
            android:textColor="?android:attr/colorControlNormal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/editText17"
            android:layout_alignStart="@+id/editText17"
            android:id="@+id/input_corderos"
            android:text="Corderos"
            android:textColor="?android:attr/colorControlNormal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/input_romana"
            android:layout_alignEnd="@+id/input_romana"
            android:id="@+id/input_corderas"
            android:text="Corderas"
            android:textColor="?android:attr/colorControlNormal" />

        <TextView
            android:text="    BUFALINOS"
            android:layout_width="match_parent"
            android:layout_marginTop="75dp"
            android:id="@+id/textView7"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Atrás"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/input_corderos"
            android:textSize="18sp" />

        <Button
            android:text="Siguiente"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNext"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:lineSpacingExtra="10sp"
            android:background="@color/colorPrimary"
            style="@style/Widget.AppCompat.Button"
            android:layout_marginStart="11dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/buttonBack" />

        <TextView
            android:text="    CAPRINOS"
            android:layout_width="match_parent"
            android:id="@+id/textView9"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_marginTop="47dp"
            android:layout_below="@+id/editText9"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="    OVINOS"
            android:layout_width="match_parent"
            android:id="@+id/textView10"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/input_cabritos"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_cabrio"
            android:text="Cabrio"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/textView9"
            android:layout_alignStart="@+id/editText9"
            android:layout_marginTop="14dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_camero"
            android:text="Camero"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/textView10"
            android:layout_alignStart="@+id/input_cabritos"
            android:layout_marginTop="16dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/inút_oveja"
            android:text="Oveja"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_above="@+id/input_romana"
            android:layout_alignStart="@+id/input_cabritonas" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_cabra"
            android:text="Cabra"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_alignBaseline="@+id/input_cabrio"
            android:layout_alignBottom="@+id/input_cabrio"
            android:layout_alignStart="@+id/editText8" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText5"
            android:text="Bufalas"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_marginEnd="142dp"
            android:layout_alignBaseline="@+id/editText4"
            android:layout_alignBottom="@+id/editText4"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:text="Butoros"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_marginStart="47dp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>