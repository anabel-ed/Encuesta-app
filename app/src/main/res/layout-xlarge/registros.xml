<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="      REGISTRO DE PARTO"
            android:layout_width="match_parent"
            android:layout_marginTop="75dp"
            android:id="@+id/textView30"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="      REGISTRO DE SECADO"
            android:layout_width="match_parent"
            android:layout_marginTop="38dp"
            android:id="@+id/textView31"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_below="@+id/radioButton61"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView30" />

        <RadioButton
            android:text="Sí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView31"
            android:layout_alignStart="@+id/radioButton61"
            android:layout_marginTop="26dp"
            android:id="@+id/radioButton62"
            android:textSize="18sp" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/radioButton63"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton62"
            android:layout_alignStart="@+id/radioButton62" />

        <RadioButton
            android:text="Sí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:id="@+id/radioButton64"
            android:textSize="18sp"
            android:layout_below="@+id/textView32"
            android:layout_alignStart="@+id/radioButton63" />

        <TextView
            android:text="      PESO AL NACER"
            android:layout_width="match_parent"
            android:id="@+id/textView32"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_below="@+id/radioButton63"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_alignStart="@+id/textView31" />

        <RadioButton
            android:text="Sí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView33"
            android:layout_alignStart="@+id/radioButton65"
            android:layout_marginTop="21dp"
            android:id="@+id/radioButton66"
            android:textSize="18sp" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/radioButton67"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton66"
            android:layout_alignStart="@+id/radioButton66" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:id="@+id/radioButton65"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton64"
            android:layout_alignStart="@+id/radioButton64" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:id="@+id/radioButton61"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton60"
            android:layout_alignStart="@+id/radioButton60" />

        <TextView
            android:text="      PESO AL DETESTE"
            android:layout_width="match_parent"
            android:id="@+id/textView33"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_height="26dp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/radioButton65"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView32" />

        <Button
            android:text="Siguiente"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNext"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:lineSpacingExtra="10sp"
            android:background="@color/colorPrimary"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_marginStart="12dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/buttonBack" />

        <Button
            android:text="Atrás"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            android:layout_width="80dp"
            android:lineSpacingExtra="1sp"
            android:textSize="18sp"
            android:layout_marginStart="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:text="Sí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:id="@+id/radioButton60"
            android:textSize="18sp"
            android:layout_below="@+id/textView30"
            android:layout_alignStart="@+id/buttonBack" />
    </RelativeLayout>
</LinearLayout>