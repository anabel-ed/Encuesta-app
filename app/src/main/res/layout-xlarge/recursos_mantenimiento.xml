<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioButton
            android:text="Acueducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton23"
            android:layout_alignStart="@+id/radioButton23"
            android:layout_marginTop="14dp"
            android:id="@+id/radioButton24"
            android:textSize="18sp" />

        <RadioButton
            android:text="Río"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton25"
            android:layout_alignStart="@+id/radioButton25"
            android:layout_marginTop="14dp"
            android:id="@+id/radioButton26"
            android:textSize="18sp" />

        <RadioButton
            android:text="Laguna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/radioButton25"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton24"
            android:layout_alignStart="@+id/radioButton24" />

        <RadioButton
            android:text="Represa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/radioButton23"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton21"
            android:layout_alignStart="@+id/radioButton21" />

        <RadioButton
            android:text="Pozo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/radioButton21"
            android:textSize="18sp"
            android:layout_below="@+id/text_fuenteAgua"
            android:layout_alignStart="@+id/text_fuenteAgua"
            android:layout_marginStart="43dp" />

        <RadioButton
            android:text="Público"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton29"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/radioButton24"
            android:layout_alignBottom="@+id/radioButton24"
            android:layout_alignStart="@+id/radioButton28" />

        <RadioButton
            android:text="Privado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton30"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/radioButton25"
            android:layout_alignBottom="@+id/radioButton25"
            android:layout_alignEnd="@+id/radioButton29" />

        <RadioButton
            android:text="Quebrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/radioButton27"
            android:textSize="18sp"
            android:layout_alignBaseline="@+id/radioButton21"
            android:layout_alignBottom="@+id/radioButton21"
            android:layout_toEndOf="@+id/text_fuenteAgua" />

        <RadioButton
            android:text="Manantial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton28"
            android:textSize="18sp"
            android:layout_above="@+id/radioButton24"
            android:layout_alignStart="@+id/radioButton27" />

        <TextView
            android:text="SISTEMA DE RIEGO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton26"
            android:layout_alignStart="@+id/text_fuenteAgua"
            android:layout_marginTop="47dp"
            android:id="@+id/text_sistemaRiego"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <RadioButton
            android:text="Sí"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_sistemaRiego"
            android:layout_alignEnd="@+id/text_sistemaRiego"
            android:layout_marginTop="28dp"
            android:id="@+id/radioButton35"
            android:textSize="18sp" />

        <RadioButton
            android:text="No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton35"
            android:layout_alignEnd="@+id/radioButton30"
            android:id="@+id/radioButton36"
            android:textSize="18sp" />

        <TextView
            android:text="TIPO DE SISTEMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton35"
            android:layout_alignStart="@+id/text_sistemaRiego"
            android:layout_marginTop="41dp"
            android:id="@+id/textView14"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <RadioButton
            android:text="Gravedad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/radioButton26"
            android:layout_marginTop="28dp"
            android:id="@+id/radioButton38"
            android:textSize="18sp" />

        <RadioButton
            android:text="Aspersión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/radioButton39"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton38"
            android:layout_alignStart="@+id/radioButton38" />

        <RadioButton
            android:text="Microaspersión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton38"
            android:layout_alignStart="@+id/radioButton29"
            android:id="@+id/radioButton40"
            android:textSize="18sp" />

        <RadioButton
            android:text="Goteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton39"
            android:layout_alignStart="@+id/radioButton40"
            android:id="@+id/radioButton41"
            android:textSize="18sp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/input_superficiaHa"
            android:text="Superficie (Ha)"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_alignBaseline="@+id/input_tipoRiego"
            android:layout_alignBottom="@+id/input_tipoRiego"
            android:layout_toEndOf="@+id/radioButton40"
            android:layout_width="250dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input_motobomba"
            android:text="Motobomba (Hp)"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_below="@+id/input_tipoRiego"
            android:layout_alignStart="@+id/input_tipoRiego"
            android:layout_width="250dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_below="@+id/input_superficiaHa"
            android:layout_alignStart="@+id/input_superficiaHa"
            android:id="@+id/inút_capacidadFlujo"
            android:text="Capacidad de Flujo"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_width="250dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_below="@+id/input_motobomba"
            android:layout_alignStart="@+id/input_motobomba"
            android:layout_marginTop="13dp"
            android:id="@+id/input_condiciones"
            android:text="Condiciones"
            android:textColor="?android:attr/colorControlNormal" />

        <Button
            android:text="Siguiente"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNext"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:lineSpacingExtra="10sp"
            android:background="@color/colorPrimary"
            style="@style/Widget.AppCompat.Button"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/radioButton26" />

        <Button
            android:text="Atrás"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"
            android:textColor="@android:color/background_light"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/buttonNext"
            android:layout_marginEnd="10dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Ingrese otro tipo de riego"
            android:ems="10"
            android:id="@+id/input_tipoRiego"
            android:textColor="?android:attr/colorControlNormal"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/radioButton39"
            android:layout_alignStart="@+id/textView14"
            android:layout_width="250dp" />

        <TextView
            android:text="PRINCIPAL FUENTE DE AGUA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="53dp"
            android:id="@+id/text_fuenteAgua"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>